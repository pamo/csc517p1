<h1>Listing posts</h1>

<table>
  <tr>
    <th>Username</th>
    <th>Content</th>
    <th>Category</th>
    <th>Votes</th>
    <th>Last Modified</th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.username %></td>
    <td><%= post.content %></td>
    <td><%= post.category %></td>
    <td><%= post.votes %></td>
    <td><%= post.updated_at %></td>

    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Post', new_post_path, :id => session[:user_id] %>
