<p id="notice"><%= notice %></p>

<h1>Search Results</h1>

<p>
  <b>Results:</b>
<table>
  <% if @found_users.empty? %>
      <span>There were no results for your query</span><br/><br/>
  <% else %>
        <b>Users</b>
      <ul>
        <% @found_users.each do |user| %>
            <li><%= link_to user.name,
                            :action => 'show', :id=>user.id %></li>
        <% end %>
      </ul>

  <% end %>
    </table>
</p>






